<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/txtAutorDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtConteudoDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conteúdo do post"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/imgPostDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/txtComentariosDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 comentários"
                android:layout_marginEnd="24dp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txtCurtidasDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 curtidas"
                android:layout_marginEnd="24dp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txtFavoritosDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 favoritos"
                android:textColor="#555555"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
